<h1>Sign Up</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email, I18n.t(:email, :scope => 'activerecord.attributes.user') %><br />
    <%= f.text_field :email, :maxlength => 100, :size => 30 %>
  </p>
  <p>
    <%= f.label :email_confirmation, I18n.t(:email_confirmation, :scope => 'activerecord.attributes.user') %><br />
    <%= f.text_field :email_confirmation, :maxlength => 100, :size => 30 %>
  </p>
  <p>
    <%= f.label :password, I18n.t(:password, :scope => 'activerecord.attributes.user') %><br />
    <%= f.password_field :password, :maxlength => 20, :size => 30 %>
  </p>
  <p>
    <%= f.label :password_confirmation, I18n.t(:password_confirmation, :scope => 'activerecord.attributes.user') %><br />
    <%= f.password_field :password_confirmation, :maxlength => 20, :size => 30 %>
  </p>
  <p>
    <%= f.submit "Sign UP" %>
  </p>
<% end %>
