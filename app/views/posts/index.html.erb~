  <%= f.error_messages %>

  <p>
    <%= f.text_area :body, :size => '60x4' %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<ul>
<% for post in @posts %>
    <li>
      <%= h(post.body) %>, posted at <%= time_ago_in_words(post.created_at) %>
    </li>
<% end %>
</ul>

